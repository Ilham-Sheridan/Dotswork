---
import Gridbox from "../../layouts/Gridbox.astro";
import CardObject from "../../components/Card-object.astro";
import B2GalleryIndex from "../b2Gallery_index.astro";
import MediaCard from "../MediaCard.astro";

const { BASE_URL } = import.meta.env;

// Helper function for path normalization inside this file
function getImagePath(path: string): string {
    // Remove leading slash if present
    const cleanPath = path.startsWith('/') ? path.slice(1) : path;
    //return `${BASE_URL}${cleanPath}`;
    return `${BASE_URL}/${cleanPath}`; //for githubPages
}
---

<div class="centering">
  <div id="pageLabel">
    <div class="menuMessageBox mini">Welcome!</div>
  </div>

  <Gridbox id="about">
    <CardObject
      image={{
        src: getImagePath("/content/illus/just.jpg"),
        alt: "Mary on top of a rooftop",
        positionX: "60%",
      }}
      size="extraTall"
    />
    <CardObject
      isTextCard
      title="Hello!"
      titleSize="bigger"
      content="Halo! Hoi!"
      contentSize="medium"
      alignText="right"
      size="wide"
    />
    <CardObject
      isTextCard
      isInvisible
      size="mediumWide"
      contentSize="regRead"
      content=`
      <span class="b7">I'm Ilham</span>, Primarily a multi-hobbyist of many things and is still growing. But so far I've delved the furthest into:
      <ul>
        <li>3D</li>
        <li>Illustration</li>
        <li>and various design works</li>
      </ul>
      As of recently, I've been looking into using my self-taught skills from all my hobbies into professional works.
      `
    />

    <div
      class="cards arrowCard material-symbols-rounded"
      style="font-size: 250px; display: grid; place-items: center;"
    >
      arrow_downward
    </div>

    <CardObject
      isTextCard
      size="mediumWide"
      contentSize="regRead"
      content=`<p style="font-size:2rem">My work online alias goes by <span class='b7'>Dotswork</span>, otherwise you could simply call me <span class='b7'>Ilham</span>.</p>`
      alignText="center"
      alignTextVert="center"
    />

    <CardObject
      image={{
        src: getImagePath("/content/dotswork.png"),
        alt: "Dotswork Logo",
        position: "left",
      }}
    />

    <CardObject
      isTextCard
      contentSize="regRead"
      content=`This page purpose is to compile most of my personal and professional works into an online portfolio.`
      alignText="center"
      alignTextVert="center"
    />
    <CardObject
      image={{
        src: getImagePath("/content/illus/grow.jpg"),
        alt: "Mareota with cocoa",
        position: "right",
      }}
      size="wide"
    />
  </Gridbox>

<!-- ------------------------------------------------------------------------------------------------------------------- -->
