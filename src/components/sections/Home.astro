      video={{
        src: getImagePath("/content/3d/curt.webm"),
        alt: "Fabric curtain simulation demo in an indoor setting.",
        volume: 0.5,
      }}
    />
    <MediaCard
      image={{
        src: getImagePath("/content/3d/qublast.jpg"),
        alt: "'QUBLAST' Inspired by the hacking tool alike 'FLipper Zero' combined with a mini oscilloscope multimeter/multitool.",
        position: "center",
      }}
    />
    <MediaCard
      size="mediumWide"
      image={{
        src: getImagePath("/content/3d/muzen.jpg"),
        alt: "A love letter to Muzen's 'Wild Jeep' Bluetooth speaker design bonus with a pile of my nixie tube models next to it.",
        position: "center",
      }}
    />
    <MediaCard
      video={{
        src: getImagePath("/content/3d/rob.webm"),
        alt: "Modelling challenge of a spherical robot.",
      }}
    />
    <MediaCard
      size="mediumWide"
