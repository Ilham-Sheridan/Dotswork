---
import { ClientRouter, slide, fade } from "astro:transitions";
import dotswork from "../assets/workdots.png";
import PersistentWindow from "../components/persistentWindow.astro";
import QuirkyLoad from "../components/utils/quirkyLoad.astro";
import Minitoast from "../components/utils/minitoast.astro";
import ImageZoom from "../components/utils/imageZoom.astro";
import DynamicNav from "../components/dynamicNav.astro";

interface Props {
  url?: string;
  title?: string;
  description?: string;
  thumb?: string;
}
const { thumb, url, title, description } = Astro.props;
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href={dotswork.src} />

    <!-- OG -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url ? url : "https://ilham-sheridan.github.io/Dotswork/"} />
    <meta property="og:title" content={title ? title : "Ilham S. L."} />
    <meta property="og:description" content={description ? description : "Ilham Sheridan's Remote Portfolio"} />
    <meta
      property="og:image"
      content={thumb ? `${import.meta.env.SITE}${thumb}` : `${import.meta.env.SITE}/content/thumb/thumb.jpg`}
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url ? url : "https://ilham-sheridan.github.io/Dotswork/"} />
    <meta property="twitter:title" content={title ? title : "Ilham S. L."} />
    <meta property="twitter:description" content={description ? description : "Ilham Sheridan's Remote Portfolio"} />
    <meta
      property="twitter:image"
      content={thumb ? `${import.meta.env.SITE}${thumb}` : `${import.meta.env.SITE}/content/thumb/thumb.jpg`}
    />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back_ios_new,arrow_downward,close,dark_mode,difference,download,draw_abstract,explicit,home,light_mode,link"
    />
    <title>Ilham S. L.</title>
    <ClientRouter />
  </head>
  <body>
    <PersistentWindow ignoreScrollCheck />
    <DynamicNav />
    <QuirkyLoad />
    <Minitoast />
    <ImageZoom />

    <div transition:animate={fade({ duration: ".5s" })}>
      <slot />
    </div>

    <div class="endOfPage">
      <hr class="end" />
    </div>
    <div class="footer">
      <div class="flexbox1">
        <!-- <div class="socials">
          <a href="https://bsky.app/profile/potto.bsky.social" target="_blank">
            <div class="socicon bsky"></div>
          </a>
          <a href="https://twitter.com/Potto2292" target="_blank">
            <div class="socicon twt"></div>
          </a>
        </div> -->
        <span class="copyright">Â©Dotswork</span>
        <!-- <a href="tos" class="tosPageLink"><span>Terms of Service</span></a> -->
      </div>
    </div>
  </body>
</html>
